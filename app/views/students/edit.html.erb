<h2>Edit Student</h2>

<%= form_with model: @student, url: student_path(@student), method: :patch, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Enter student name" %>
  </div>
  <div class="form-group">
    <%= form.label :subject %>
    <%= form.text_field :subject, placeholder: "Enter subject" %>
  </div>
  <div class="form-group">
    <%= form.label :marks %>
    <%= form.number_field :marks, placeholder: "Enter marks" %>
  </div>
  <div class="form-group">
    <%= form.submit "Update", class: "btn" %>
  </div>
<% end %>
