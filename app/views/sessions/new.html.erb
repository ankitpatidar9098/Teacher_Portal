<html>
<head>
  <title>Teacher Portal - Login</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    .container {
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      max-width: 400px;
      width: 100%;
    }
    h1 {
      text-align: center;
      color: #333;
    }
    .form-group {
      margin-bottom: 15px;
    }
    .form-group label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }
    .form-group input {
      width: 100%;
      padding: 8px;
      box-sizing: border-box;
      border: 1px solid #ddd;
      border-radius: 4px;
    }
    .form-group input[type="submit"] {
      background-color: #5cb85c;
      color: white;
      border: none;
      cursor: pointer;
      padding: 10px;
      font-size: 16px;
    }
    .form-group input[type="submit"]:hover {
      background-color: #4cae4c;
    }
    .flash-error {
      color: red;
      text-align: center;
      margin-top: 15px;
    }
    .link-group {
      text-align: center;
      margin-top: 15px;
    }
    .link-group a {
      color: #007bff;
      text-decoration: none;
    }
    .link-group a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Login</h1>

    <%= form_with url: sessions_path, method: :post do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>

      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>

      <div class="form-group">
        <%= submit_tag "Login" %>
      </div>
    <% end %>

    <% if flash[:error] %>
      <p class="flash-error"><%= flash[:error] %></p>
    <% end %>

    <div class="link-group">
      <%= link_to "Sign Up", new_teacher_path %>
    </div>
  </div>
</body>
</html>
